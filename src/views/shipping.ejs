    <title>Outsider - Selecione a forma de entrega</title>
</head>

<body>
    <main>
        <section>
            <div class="grid_container bg-left-side">
                <div class="content_section">
                    <div class="main_logo">
                        <a href="#">
                            <img src="/images/main-logo.png" alt="Outsider logo">
                        </a>
                    </div>
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    <div class="icon-chart">
                                        <svg width="20" height="19" xmlns="http://www.w3.org/2000/svg"
                                            class="order-summary-toggle__icon">
                                            <path
                                                d="M17.178 13.088H5.453c-.454 0-.91-.364-.91-.818L3.727 1.818H0V0h4.544c.455 0 .91.364.91.818l.09 1.272h13.45c.274 0 .547.09.73.364.18.182.27.454.18.727l-1.817 9.18c-.09.455-.455.728-.91.728zM6.27 11.27h10.09l1.454-7.362H5.634l.637 7.362zm.092 7.715c1.004 0 1.818-.813 1.818-1.817s-.814-1.818-1.818-1.818-1.818.814-1.818 1.818.814 1.817 1.818 1.817zm9.18 0c1.004 0 1.817-.813 1.817-1.817s-.814-1.818-1.818-1.818-1.818.814-1.818 1.818.814 1.817 1.818 1.817z">
                                            </path>
                                        </svg>
                                    </div>
                                    Exibir resumo de compra
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="chart">
                                        <div class="img-superior">
                                            <div>
                                                <span id="elipse">1</span>
                                            </div>
                                            <img src="/images/information/Screen Shot 2019-09-05 at 3.51.png">
                                                alt="">
                                            <div class="item-description">
                                                <p id="description">TECH T-SHIRT</p>
                                                <p id="information">Preta / P</p>
                                            </div>
                                            <div class="item-price">
                                                <p>R$ 129,00</p>
                                            </div>
                                        </div>
                                        <div class="division">
                                            <!-- Here goes the division page -->
                                        </div>
                                        <div class="discount_section">
                                            <input type="text" id="discount-cuppon" name="discount"
                                                placeholder="Código de desconto">
                                            <button class="btn-apply">APLICAR</button>
                                        </div>
                                        <div class="division">
                                            <!-- Here goes the division page -->
                                        </div>
                                        <div>
                                            <div class="frete">
                                                <span id="subtotal">Subtotal</span>
                                                <span id="subtotal-price">R$ 129,00</span>
                                            </div>
                                            <div class="frete-price">
                                                <span id="frete">Frete</span>
                                                <span id="calc">R$ 9,90</span>
                                            </div>
                                            <div class="division">
                                                <!-- Here goes the division page -->
                                            </div>
                                            <div class="total-calc">
                                                <span id="total">TOTAL</span>
                                                <span id="total-price">R$ 138,90</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="division-1"></div>
                    <div class="info_payment">
                        <ul>
                            <li class="information-li">Informações</li>
                            <div class="arrow-info">
                            </div><!-- arrow-back -->
                            <li class="frete-li">Frete</li>
                            <div class="arrow-info">
                            </div><!-- arrow-back -->
                            <li>Pagamento</li>
                        </ul>
                    </div>
                    <div class="main-container-shipping">
                        <!-- SHIPPING SELECTOR -->
                        <div class="shipping-info">
                            <p>Forma de frete</p>
                        </div>
                        <div class="shipping-main-container">
                            <div class="slc-shipping">
                                <div class="shipping-container">
                                    <div class="shipping-item">
                                        <label class="container">
                                            <p>Loggi</p>
                                            <p>4 dias úteis</p>
                                            <input type="radio" name="radio">
                                            <span class="checkmark"></span>
                                        </label><!-- container -->
                                    </div><!-- shipping-item -->
                                    <div class="shipping-price">
                                        <span id="shipping-price">R$ 9,90</span>
                                    </div><!-- shipping-price -->
                                </div><!-- shipping-container -->
                                <div class="division-shipping">
                                    <!-- Here goes the division page -->
                                </div><!-- division-shipping -->
                                <div class="shipping-container">
                                    <div class="shipping-item">
                                        <label class="container">
                                            <p>Loggi</p>
                                            <p>4 dias úteis</p>
                                            <input type="radio" name="radio">
                                            <span class="checkmark"></span>
                                        </label><!-- container -->
                                    </div><!-- shipping-item -->
                                    <div class="shipping-price">
                                        <span id="shipping-price">R$ 9,90</span>
                                    </div><!-- shipping-price -->
                                </div><!-- shipping-container -->
                                <div class="division-shipping">
                                    <!-- Here goes the division page -->
                                </div><!-- division-shipping -->
                                <div class="shipping-container">
                                    <div class="shipping-item">
                                        <label class="container">
                                            <p>Loggi</p>
                                            <p>4 dias úteis</p>
                                            <input type="radio" name="radio">
                                            <span class="checkmark"></span>
                                        </label><!-- container -->
                                    </div><!-- shipping-item -->
                                    <div class="shipping-price">
                                        <span id="shipping-price">R$ 9,90</span>
                                    </div><!-- shipping-price -->
                                </div><!-- shipping-container -->
                            </div><!-- slc-shipping -->
                        </div>

                        <!-- SECTION TO CONTINUE OR GO BACK -->
                        <div class="go-back-section">
                            <div class="arrow-back">
                            </div><!-- arrow-back -->
                            <div class="go-back">
                                <a href="../buy-finalization/information.html">
                                    <p>Voltar para Informações</p>
                                </a>
                            </div><!-- go-back -->
                            <!-- CONTINUE BUTTON -->
                            <div class="btn-payment">
                                <a href="../payment/payment.html">
                                    <button class="btn-continue">Continuar com o pagamento</button>
                                </a>
                            </div><!-- btn-payment -->
                        </div><!-- go-back-section -->
                    </div><!-- main-container-shipping -->
                </div><!-- content_section -->
            </div><!-- grid_container bg-left-side -->

            <!-- RIGHT SIDE -->
            <div class="grid_container bg-right-side">
                <div class="chart">
                    <div class="img-superior">
                        <div>
                            <span id="elipse">1</span>
                        </div>
                        <img src="/images/information/Screen Shot 2019-09-05 at 3.51.png" alt="">
                        <div class="item-description">
                            <p id="description">TECH T-SHIRT</p>
                            <p id="information">Preta / P</p>
                        </div>
                        <div class="item-price">
                            <p>R$ 129,00</p>
                        </div>
                    </div>
                    <div class="division">
