<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/reset.css">
    <link rel="stylesheet" href="/stylesheets/theme.css">
    <link rel="stylesheet" href="/stylesheets/department.css">
    <link rel="stylesheet" href="/stylesheets/account.css">
    <link rel="stylesheet" href="/stylesheets/account_edit.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account - Outsider</title>
</head>

<body>

    <header>
        <section id="profile">
            <div class="max-width-content profile__container">
                <a href="index.html"><img width="200" src="/images/account/outsider 2.svg" alt="Outsider Logo"></a>
            </div> <!-- .profile__container -->
        </section> <!-- . profile -->
    </header> <!-- .header -->

    <main class="max-width-content">
        <section id="account">
            <aside class="account__menu">
                <div class="account__user-info">
                    <div class="account__user-img">
                        <img width="55" src="/images/account/user.svg" alt="Ícone de user">
                    </div> <!-- .account__user-img -->
                    <div class="account__user-greeting">
                        <span>Olá, <%= user.nome[0].toUpperCase() + user.nome.substring(1) %>!</span>
                    </div> <!-- .account__user-greeting -->
                </div> <!-- .account__user-info -->
                <nav class="account__link">
                    <a href="" class="item-c">Dados pessoais</a>
                    <a href="" class="account__itens">Cartões</a>
                    <a href="" class="account__itens">Endereços</a>
                    <a href="/account_request" class="account__itens">Pedidos</a>
                    <form action="/logout" method="post">
                        <button class="account__itens">Sair</button>
                    </form>
                </nav> <!-- . account__link -->
            </aside> <!-- .account__menu -->
            <section class="account__page">
                <div class="account__dados">
                    <a href="/account" class="acc__dados">
                        <img width="17" src="/images/account-edit/seta.svg" alt="ícone seta esquerda">
                        Dados pessoais
                    </a>
                </div> <!-- .account__dados -->
                <h2>Editar dados pessoais</h2>
                <section class="account__form-edit">
                    <div class="container__form">
                        <form action="/users?_method=PUT" method="post" class="form__edit">
                            <div class="flex__form">
                                <label for="firstName">Nome</label>
                                <input type="text" name="firstName" id="firstName"
                                    value="<%= user.nome[0].toUpperCase() + user.nome.substring(1) %>" required>
                            </div>
                            <div class="flex__form">
                                <label for="lastName">Sobrenome</label>
                                <input type="text" name="lastName" id="lastName"
                                    value="<%= user.sobrenome[0].toUpperCase() + user.sobrenome.substring(1) %>"
                                    required>
                            </div>
                            <div class="flex__form">
                                <label for="document">CPF</label>
                                <input type="text" name="document" id="document" value="<%= user ? user.cpf : '' %>"
                                    required>
                            </div>
                            <div class="flex__form">
                                <label for="phone">Telefone</label>
                                <input type="text" name="phone" id="phone" value="<%= user ? user.telefone : '' %>"
                                    required>
                            </div>
                            <div class="flex__form">
                                <label for="birthDate">Data de nascimento</label>
                                <input type="text" name="birthDate" id="birthDate"
                                    value="<%= user ? user.nascimento : '' %>" required>
                            </div>
                            <button type="submit" class="submit__form">Salvar alterações</button>
                        </form>
                    </div> <!-- .container__form -->
                </section> <!-- .account__form-edit -->
            </section> <!-- .account__page -->
        </section> <!-- .account -->
    </main> <!-- .main -->
    <%- include("./partials/footer") %>
</body>

</html>