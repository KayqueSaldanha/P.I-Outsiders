<!DOCTYPE html>
<html lang="pt-br">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/reset.css" />
    <link rel="stylesheet" href="/stylesheets/theme.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vivara</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</head>

<body>


    <main class="tamanho_maximo_conteudo">
        <a href="/adm/addProduto"><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                class="bi bi-plus-circle-fill botao_add" viewBox="0 0 16 16">
                <path
                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
            </svg></a>


        <section class="experiencia_vivara">
            <section class="zona_titulo">
                <span class="linha_texto"></span>
                <h1 class="h1_titulo texto_garamond">Todos os produtos</h1>
                <h2 class="h2_titulo texto_roboto">
                    TODOS PRODUTOS EM EXIBIÇÃO NO SITE
                </h2>
            </section>
        </section>

        <section class="grade_produtos display_flex">

            <% if (produtos && produtos.length> 0) { %>
                <% produtos.map( produtos=> { %>
                    <div class="item_produto">
                        <div class="produto_foto">
                            <img src="/produtos.images/<%= produtos.imagem %>" />
                        </div>
                        <div class="produto_info display_flex_column">
                            <h2 class="titulo_produto texto_roboto texto_cinza">
                                <%= produtos.status %>
                            </h2>
                            <div class="item_nome">
                                <%= produtos.nome %>
                            </div>
                            <div class="item_preco display_flex_column texto_roboto">
                                <h2 class="avista">R$<%= produtos.preco %>,00</h2>
                                <div class="edicao display_flex">
                                    <div class="botao_editar">VISUALIZAR</div>
                                    <div class="botao_editar">EDITAR</div>
                                    <div class="botao_editar">DELETAR</div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h2 class="h2_titulo texto_roboto">-- NÃO HÁ NENHUM PRODUTO CADASTRADO --</h2>
                            <% } %>




        </section>
    </main>