<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/reset.css">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/theme.css">
    <link rel="stylesheet" href="/stylesheets/produtos.css">
    <title>Produtos</title>
</head>

<body>
    <%- include("./partials/header") %>

        <main>
            <section id="sec1">
                <form action="/carrinho/<%= produto[0].id %>" method="post">

                    <div id="imagemPrincipal">
                        <img class="imagem_principal" src="/images/produtos/<%= produto[0].imagem1 %>" alt="">
                    </div>

                    <div>
                        <div id="imagem1" class="imagens_laterais">
                            <img  class="teste" onclick='clickImagem(1)' src="/images/produtos/<%= produto[0].imagem1 %>"
                                alt="produto">
                        </div>
                        <div id="imagem2" class="imagens_laterais" >
                            <img  class="teste" onclick='clickImagem(2)' src="/images/produtos/<%= produto[0].imagem2 %>"
                                alt="produto">
                        </div>
                        <div id="imagem3" class="imagens_laterais">
                            <img  class="teste" onclick='clickImagem(3)' src="/images/produtos/<%= produto[0].imagem3 %>"
                                alt="produto">
                        </div>
                    </div>

                    <div id="direita">

                        <div id="top">
                            <div>
                                <h3>
                                    <%= produto[0].nome %>
                                </h3>
                                <p id="p1">ref A3060</p>
                                <p id="p2"><span>R$ <%= produto[0].preco %>,00</span>| RS <%=
                                        Math.round(produto[0].preco * 0.5) %>,00</p>
                                <p id="p3">ou em até 3x de R$ <%= Math.round(produto[0].preco * 0.5* 0.33) %>,00</p>
                            </div>

                        </div>
                        <div id="mid">
                            <div>
                                <h3>Tamanho</h3>
                                <div id="escolhaTamanho">
                                    <div class="tamanhos">
                                        <p>PP</p>
                                    </div>
                                    <div class=tamanhos>
                                        <p>P</p>
                                    </div>
                                    <div class=tamanhos>
                                        <p>M</p>
                                    </div>
                                    <div class=tamanhos>
                                        <p>G</p>
                                    </div>
                                    <div class=tamanhos>
                                        <p>GG</p>
                                    </div>
                                </div>
                                <p> <span>Quantidade: </span><input type="number" min="1"></p>
                            </div>
                        </div>

                        <div id="bot">
                            <div>
                                <div class="cores">
                                    <p>cores:</p>
                                    <div class="cor" id="azulclaro"></div>
                                    <div class="cor" id="azulescuro"></div>
                                    <div class="cor" id="rosa"></div>
                                    <div class="cor" id="vermelho"></div>
                                    <div class="cor" id="preto"></div>
                                </div>
                                <div>
                                    <button href="/carrinho" id="carrinho">adicionar a sacola →</button>
                                </div>
                            </div>
                        </div>

                        <div id="descricao">
                            <h4>Descrição:</h4>
                            <p>
                                <%= produto[0].descricao %>
                            </p>
                        </div>
                    </div>
                </form>
            </section>


        </main>
        <div class="espaco"></div>
        <%- include("./partials/footer") %>
            <script src="/javascripts/product/product.js"></script>
</body>

</html>