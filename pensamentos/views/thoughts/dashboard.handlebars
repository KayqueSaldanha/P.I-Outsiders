<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Create Thought</a>
    </div>
    <h3>Your Thoughts</h3>
    <ul>
        {{#each thoughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/thoughts/edit/{{this.id}}" class="btn">Edit</a>
                <form action="/thoughts/delete" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Delete" class="btn">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>
    {{#if emptyThoughts}}
    <p>Don't have thoughts...</p>
    {{else}}

    {{/if}}
</div>